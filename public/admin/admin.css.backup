/* Reset & Variables */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --bg-primary: #0a0a0f;
    --bg-secondary: #13131a;
    --bg-card: #1a1a24;
    --text-primary: #ffffff;
    --text-secondary: #a0a0b0;
    --accent-primary: #6366f1;
    --accent-secondary: #8b5cf6;
    --success: #10b981;
    --danger: #ef4444;
    --warning: #f59e0b;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background-color: var(--bg-primary);
    color: var(--text-primary);
    line-height: 1.6;
}

/* Screens */
.screen {
    display: none;
}

.screen.active {
    display: block;
}

/* Login Screen */
#login-screen,
#register-screen {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}

.login-container {
    background-color: var(--bg-card);
    padding: 3rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.05);
    max-width: 450px;
    width: 100%;
}

.login-container h1 {
    margin-bottom: 2rem;
    text-align: center;
    background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.login-info {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
}

.login-info p {
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
}

/* Forms */
.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--text-secondary);
    font-weight: 500;
}

.form-group input,
.form-group textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    background-color: var(--bg-secondary);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    color: var(--text-primary);
    font-size: 1rem;
    transition: all 0.3s ease;
}

.form-group input:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--accent-primary);
}

.checkbox-group {
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.checkbox-group input[type="checkbox"] {
    width: auto;
    margin: 0;
}

.error-message {
    color: var(--danger);
    margin-top: 1rem;
    text-align: center;
    font-size: 0.9rem;
}

/* Buttons */
.btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-primary {
    background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-secondary) 100%);
    color: var(--text-primary);
    width: 100%;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
}

.btn-secondary {
    background-color: var(--bg-secondary);
    color: var(--text-primary);
    width: 100%;
    margin-top: 1rem;
}

.btn-secondary:hover {
    background-color: var(--bg-card);
}

.btn-danger {
    background-color: var(--danger);
    color: var(--text-primary);
}

.btn-danger:hover {
    background-color: #dc2626;
}

.btn-success {
    background-color: var(--success);
    color: var(--text-primary);
}

.btn-success:hover {
    background-color: #059669;
}

.btn-small {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
}

/* Admin Navigation */
.admin-nav {
    background-color: var(--bg-card);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    padding: 1.5rem 2rem;
}

.admin-nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
}

.admin-nav h2 {
    background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.nav-buttons {
    display: flex;
    gap: 1rem;
    align-items: center;
}

.nav-btn {
    padding: 0.75rem 1.5rem;
    background-color: transparent;
    border: none;
    color: var(--text-secondary);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.nav-btn:hover {
    color: var(--text-primary);
    background-color: var(--bg-secondary);
}

.nav-btn.active {
    color: var(--text-primary);
    background-color: var(--bg-secondary);
}

/* Admin Content */
.admin-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
}

.section {
    display: none;
}

.section.active {
    display: block;
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
}

.section-header h2 {
    font-size: 2rem;
}

/* Items List */
.items-list {
    display: grid;
    gap: 1.5rem;
}

.item-card {
    background-color: var(--bg-card);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.3s ease;
}

.item-card:hover {
    border-color: rgba(99, 102, 241, 0.3);
}

.item-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 1rem;
}

.item-header h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
}

.item-header p {
    color: var(--text-secondary);
    font-size: 0.875rem;
}

.item-actions {
    display: flex;
    gap: 0.5rem;
}

.item-content {
    margin-bottom: 1rem;
}

.item-content p {
    color: var(--text-secondary);
    line-height: 1.6;
}

.item-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
}

.tag {
    background-color: rgba(99, 102, 241, 0.1);
    color: var(--accent-primary);
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    font-size: 0.875rem;
}

.status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 600;
}

.status-new {
    background-color: rgba(99, 102, 241, 0.2);
    color: var(--accent-primary);
}

.status-read {
    background-color: rgba(245, 158, 11, 0.2);
    color: var(--warning);
}

.status-replied {
    background-color: rgba(16, 185, 129, 0.2);
    color: var(--success);
}

.contact-meta {
    display: flex;
    gap: 1.5rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    font-size: 0.875rem;
    color: var(--text-secondary);
}

/* Modal */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    animation: fadeIn 0.3s ease;
}

.modal.active {
    display: flex;
    align-items: center;
    justify-content: center;
}

.modal-content {
    background-color: var(--bg-card);
    padding: 2.5rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    max-width: 600px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    animation: slideUp 0.3s ease;
}

.close {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    font-size: 2rem;
    font-weight: bold;
    color: var(--text-secondary);
    cursor: pointer;
    transition: color 0.3s ease;
}

.close:hover {
    color: var(--text-primary);
}

.modal-content h2 {
    margin-bottom: 2rem;
}

.modal-buttons {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
}

.modal-buttons .btn {
    width: auto;
    flex: 1;
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

@keyframes slideUp {
    from {
        transform: translateY(30px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

/* Dashboard Stats Grid */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.stat-card {
    background-color: var(--bg-card);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1.5rem;
    transition: all 0.3s ease;
}

.stat-card:hover {
    border-color: rgba(99, 102, 241, 0.3);
    transform: translateY(-2px);
}

.stat-icon {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.stat-icon svg {
    width: 30px;
    height: 30px;
}

.projects-icon {
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.2), rgba(139, 92, 246, 0.2));
    color: var(--accent-primary);
}

.contacts-icon {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(5, 150, 105, 0.2));
    color: var(--success);
}

.new-icon {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.2), rgba(217, 119, 6, 0.2));
    color: var(--warning);
}

.featured-icon {
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.2), rgba(220, 38, 38, 0.2));
    color: var(--danger);
}

.stat-info h3 {
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-weight: 500;
    margin-bottom: 0.5rem;
}

.stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
}

/* Dashboard Sections */
.dashboard-section {
    background-color: var(--bg-card);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
}

.dashboard-section h3 {
    margin-bottom: 1.5rem;
    font-size: 1.25rem;
}

.recent-items {
    display: grid;
    gap: 1rem;
}

.recent-item {
    background-color: var(--bg-secondary);
    padding: 1rem;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: all 0.3s ease;
}

.recent-item:hover {
    border-color: rgba(99, 102, 241, 0.3);
}

.recent-item-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 0.5rem;
}

.recent-item-header h4 {
    font-size: 1rem;
    color: var(--text-primary);
}

.recent-item-time {
    font-size: 0.75rem;
    color: var(--text-secondary);
}

.recent-item-content {
    color: var(--text-secondary);
    font-size: 0.875rem;
}

/* Header Actions */
.header-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
}

.search-input {
    padding: 0.5rem 1rem;
    background-color: var(--bg-secondary);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    color: var(--text-primary);
    font-size: 0.875rem;
    min-width: 250px;
}

.search-input:focus {
    outline: none;
    border-color: var(--accent-primary);
}

/* Analytics Section */
.analytics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
}

.analytics-card {
    background-color: var(--bg-card);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 1.5rem;
}

.analytics-card h3 {
    margin-bottom: 1.5rem;
    font-size: 1.125rem;
}

.stats-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.stat-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    background-color: var(--bg-secondary);
    border-radius: 8px;
}

.stat-item span {
    color: var(--text-secondary);
}

.stat-item strong {
    color: var(--text-primary);
    font-size: 1.25rem;
}

.tags-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
}

.tags-cloud .tag {
    font-size: 0.875rem;
    padding: 0.5rem 1rem;
}

.tag-count {
    margin-left: 0.5rem;
    opacity: 0.7;
}

/* Settings Section */
.settings-container {
    display: grid;
    gap: 1.5rem;
}

.settings-card {
    background-color: var(--bg-card);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 1.5rem;
}

.settings-card h3 {
    margin-bottom: 1.5rem;
    font-size: 1.125rem;
}

.settings-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.settings-actions .btn {
    width: auto;
}

.info-text {
    margin-top: 1rem;
    color: var(--text-secondary);
    font-size: 0.875rem;
}

.warning-text {
    color: var(--danger);
    margin-bottom: 1rem;
    font-size: 0.875rem;
}

.form-message {
    margin-top: 1rem;
    padding: 0.75rem;
    border-radius: 8px;
    font-size: 0.875rem;
    display: none;
}

.form-message.success {
    background-color: rgba(16, 185, 129, 0.2);
    color: var(--success);
    display: block;
}

.form-message.error {
    background-color: rgba(239, 68, 68, 0.2);
    color: var(--danger);
    display: block;
}

.danger-zone {
    border-color: rgba(239, 68, 68, 0.3);
}

.danger-zone h3 {
    color: var(--danger);
}

/* Canvas */
canvas {
    max-width: 100%;
    height: auto;
}

/* Quick Add Section */
.quick-add-section {
    background-color: var(--bg-card);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 2rem;
}

.quick-add-section h3 {
    margin-bottom: 0.5rem;
    font-size: 1.125rem;
}

.quick-add-section .info-text {
    margin-top: 0;
    margin-bottom: 1rem;
}

.quick-add-form {
    display: flex;
    gap: 1rem;
    align-items: center;
}

.quick-add-input {
    flex: 1;
    padding: 0.75rem 1rem;
    background-color: var(--bg-secondary);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    color: var(--text-primary);
    font-size: 1rem;
}

.quick-add-input:focus {
    outline: none;
    border-color: var(--accent-primary);
}

.quick-add-section .form-message {
    margin-top: 1rem;
}

/* Contact Management Styles */
.contact-card {
    transition: all 0.3s ease;
}

.contact-info {
    flex: 1;
}

.contact-email {
    color: var(--accent-primary);
    font-size: 0.875rem;
    margin-bottom: 0.25rem;
}

.contact-date {
    color: var(--text-secondary);
    font-size: 0.8rem;
}

.contact-message-preview {
    background-color: var(--bg-secondary);
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.contact-message-preview:hover {
    border-color: var(--accent-primary);
    background-color: rgba(99, 102, 241, 0.05);
}

.contact-message-preview strong {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
}

.contact-message-preview p {
    color: var(--text-secondary);
    margin: 0;
}

.expand-indicator {
    display: inline-block;
    margin-top: 0.5rem;
    color: var(--accent-primary);
    font-size: 0.875rem;
    font-weight: 600;
}

.contact-full-message {
    background-color: var(--bg-secondary);
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1rem;
    border: 1px solid rgba(99, 102, 241, 0.3);
}

.contact-full-message strong {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
}

.contact-full-message p {
    color: var(--text-secondary);
    white-space: pre-wrap;
    word-wrap: break-word;
    margin: 0;
}

.contact-controls {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    padding: 1rem;
    background-color: var(--bg-secondary);
    border-radius: 8px;
}

.contact-status-control {
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.contact-status-control label {
    color: var(--text-secondary);
    font-weight: 600;
    font-size: 0.875rem;
}

.status-select {
    background-color: var(--bg-primary);
    color: var(--text-primary);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.3s ease;
}

.status-select:hover {
    border-color: var(--accent-primary);
}

.status-select:focus {
    outline: none;
    border-color: var(--accent-primary);
}

.contact-notes-section {
    margin-bottom: 1rem;
}

.contact-notes-section label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--text-secondary);
    font-weight: 600;
    font-size: 0.875rem;
}

.notes-textarea {
    width: 100%;
    padding: 0.75rem;
    background-color: var(--bg-secondary);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    color: var(--text-primary);
    font-family: inherit;
    font-size: 0.875rem;
    resize: vertical;
    transition: all 0.3s ease;
    margin-bottom: 0.5rem;
}

.notes-textarea:focus {
    outline: none;
    border-color: var(--accent-primary);
}

.notes-textarea::placeholder {
    color: var(--text-secondary);
    opacity: 0.6;
}

.contact-actions {
    display: flex;
    gap: 0.5rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
}

/* Badge Styles */
.badge {
    background: linear-gradient(135deg, var(--danger) 0%, #dc2626 100%);
    color: white;
    font-size: 0.75rem;
    font-weight: 700;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    margin-left: 0.5rem;
    min-width: 20px;
    text-align: center;
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.7;
    }
}

/* Filter Select */
.filter-select {
    padding: 0.5rem 1rem;
    background-color: var(--bg-secondary);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    color: var(--text-primary);
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.3s ease;
}

.filter-select:hover {
    border-color: var(--accent-primary);
}

.filter-select:focus {
    outline: none;
    border-color: var(--accent-primary);
}

/* Invoice Filters */
.invoice-filters {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
}

.filter-btn {
    padding: 0.5rem 1rem;
    background-color: var(--bg-secondary);
    border: 1px solid rgba(255, 255, 255, 0.05);
    color: var(--text-secondary);
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

.filter-btn:hover {
    color: var(--text-primary);
    border-color: rgba(99, 102, 241, 0.3);
}

.filter-btn.active {
    background-color: var(--accent-primary);
    color: var(--text-primary);
    border-color: var(--accent-primary);
}

/* Invoice Modal - Larger Modal */
.modal-large {
    max-width: 900px;
}

.form-section {
    background-color: var(--bg-secondary);
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.form-section h3 {
    font-size: 1.125rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
}

.form-section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.form-section-header h3 {
    margin-bottom: 0;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
}

/* Line Items */
.line-item {
    background-color: var(--bg-primary);
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.line-item-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
}

.line-item-header h4 {
    font-size: 0.875rem;
    color: var(--text-secondary);
}

.remove-line-item {
    background: none;
    border: none;
    color: var(--danger);
    cursor: pointer;
    font-size: 1.25rem;
    padding: 0;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    transition: all 0.3s ease;
}

.remove-line-item:hover {
    background-color: rgba(239, 68, 68, 0.2);
}

.line-item-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 0.75rem;
}

.line-item-grid .form-group {
    margin-bottom: 0;
}

/* Invoice Totals */
.invoice-totals {
    background-color: var(--bg-secondary);
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.total-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.total-row:last-child {
    border-bottom: none;
}

.total-row span {
    color: var(--text-secondary);
    font-size: 1rem;
}

.total-row strong {
    color: var(--text-primary);
    font-size: 1.125rem;
}

.total-final {
    border-top: 2px solid rgba(99, 102, 241, 0.3);
    margin-top: 0.5rem;
    padding-top: 1rem;
}

.total-final span,
.total-final strong {
    font-size: 1.25rem;
    font-weight: 700;
}

.total-final strong {
    color: var(--accent-primary);
}

/* Invoice Card Styles */
.invoice-card {
    background-color: var(--bg-card);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.3s ease;
}

.invoice-card:hover {
    border-color: rgba(99, 102, 241, 0.3);
}

.invoice-card-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 1rem;
}

.invoice-number {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
}

.invoice-card-body {
    margin-bottom: 1rem;
}

.invoice-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin-bottom: 1rem;
}

.invoice-info-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.invoice-info-label {
    font-size: 0.75rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.invoice-info-value {
    font-size: 1rem;
    color: var(--text-primary);
    font-weight: 600;
}

.invoice-card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
}

.invoice-actions {
    display: flex;
    gap: 0.5rem;
}

/* Status badges for invoices */
.status-draft {
    background-color: rgba(160, 160, 176, 0.2);
    color: var(--text-secondary);
}

.status-sent {
    background-color: rgba(99, 102, 241, 0.2);
    color: var(--accent-primary);
}

.status-paid {
    background-color: rgba(16, 185, 129, 0.2);
    color: var(--success);
}

.status-overdue {
    background-color: rgba(239, 68, 68, 0.2);
    color: var(--danger);
}

/* Responsive */
@media (max-width: 768px) {
    .admin-nav-content {
        flex-direction: column;
        gap: 1rem;
    }

    .nav-buttons {
        flex-direction: column;
        width: 100%;
    }

    .nav-btn {
        width: 100%;
    }

    .section-header {
        flex-direction: column;
        gap: 1rem;
        align-items: stretch;
    }

    .item-header {
        flex-direction: column;
        gap: 1rem;
    }

    .modal-content {
        padding: 1.5rem;
    }

    .stats-grid {
        grid-template-columns: 1fr;
    }

    .analytics-grid {
        grid-template-columns: 1fr;
    }

    .header-actions {
        flex-direction: column;
        width: 100%;
    }

    .search-input {
        width: 100%;
        min-width: auto;
    }

    .settings-actions {
        flex-direction: column;
    }

    .settings-actions .btn {
        width: 100%;
    }

    .quick-add-form {
        flex-direction: column;
    }

    .quick-add-input {
        width: 100%;
    }

    .form-row {
        grid-template-columns: 1fr;
    }

    .line-item-grid {
        grid-template-columns: 1fr;
    }

    .invoice-info {
        grid-template-columns: 1fr;
    }

    .invoice-card-footer {
        flex-direction: column;
        gap: 1rem;
        align-items: stretch;
    }

    .invoice-actions {
        flex-direction: column;
    }

    .invoice-actions .btn {
        width: 100%;
    }

    .invoice-filters {
        justify-content: center;
    }

    .contact-controls {
        flex-direction: column;
    }

    .filter-select {
        width: 100%;
    }
}
